.c-button
  background $blue
  border none
  color white
  display inline-block
  font-size $font-size-large
  font-weight 300
  font-weight bold
  line-height 1
  padding $s-size
  text-decoration none

  &--primary
    background $yellow

  &--full-width
    width 100%

  &.is-yellow
    background-color $yellow
  &.is-red
    background-color lighten($red, 10)

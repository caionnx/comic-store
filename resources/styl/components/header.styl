.c-header
  background $black

  &__content
    align-items center
    display flex
    justify-content space-between

  &__title
    background $red
    color white
    font-size 1.35em
    margin 0
    padding $s-size
    text-decoration none
    text-transform uppercase
    h1
      margin 0

    @media (min-width $desktop-breakpoint)
      font-size $l-size

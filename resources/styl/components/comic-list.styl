.c-comic-list
  display flex
  flex-wrap wrap
  margin-bottom 3rem
  margin-left -1rem
  margin-right -1rem
  justify-content center

  @media (min-width $desktop-breakpoint)
    justify-content space-between

  &__item
    background-color $dark-grey
    border 1px solid
    cursor pointer
    margin 1rem
    padding 1.5rem
    text-align center
    transition all .2s ease-out

    @media (min-width $desktop-breakpoint)
      padding 3rem

      &:hover
        opacity 1
        transform scale(1.13, 1.12)
        transition all .2s ease-in

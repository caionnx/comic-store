.c-comic-list
  display flex
  flex-wrap wrap
  margin-bottom 3rem
  margin-left -1rem
  margin-right -1rem
  justify-content center

  @media (min-width $desktop-breakpoint)
    justify-content space-between

    &:hover
      .c-comic-list__item
        opacity 0.5

        &:hover
          transform scale(1.13, 1.12)
          opacity 1
          transition all .2s ease-in

  &__item
    margin 1rem
    transition all .2s ease-out
    padding 1.5rem
    border 1px solid
    background-color $dark-grey
    text-align center

    img
      cursor pointer
    @media (min-width $desktop-breakpoint)
      padding 3rem
